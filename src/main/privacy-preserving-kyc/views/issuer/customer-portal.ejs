<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Issuer Site - Customer Portal</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        .bd-callout {
            padding: 0.75rem;
            /* margin-top: 1.25rem;
            margin-bottom: 1.25rem; */
            border: 1px solid #e9ecef;
            border-left-width: 0.25rem;
            border-radius: 0.25rem;
            border-left-color: #5bc0de;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand mx-3" href="#">Issuer Site - Customer Portal</a>
        </div>
    </nav>

    <div class="container my-4" style="max-width: 80%">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Customer Information
                    </div>
                    <div class="card-body">
                        <div class="container p-0">
                            <div class="row">
                                <div class="col">
                                    <p><b>Username:</b>
                                        <%= customer.username %>
                                    </p>
                                    <p><b>Full Name:</b>
                                        <%= customer.name %>
                                    </p>
                                    <p><b>Passport No.:</b>
                                        <%= customer.passport_no %>
                                    </p>
                                </div>
                                <div class="col">
                                    <p><b>Date of Birth:</b>
                                        <%= customer.birth_date %>
                                    </p>
                                    <p><b>Nationality:</b>
                                        <%= customer.nationality %>
                                    </p>
                                    <p><b>Register Time:</b>
                                        <%= new Date(customer.register_time).toLocaleDateString() + " " + new
                                            Date(customer.register_time).toLocaleTimeString() %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        Connections
                    </div>
                    <div class="card-body">
                        <button type="button" class="btn btn-primary" id="create-inv">New Connection</button>
                        <span class="bd-callout">asdfawfawfhwqkfejaklwjfajwlsdfjlasl</span>
                        <hr>
                        <form class="mb-3">
                            <label for="idFilter" class="form-label">Filter by ID:</label>
                            <input type="text" class="form-control" id="idFilter" placeholder="Enter ID">
                        </form>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Holder DID</th>
                                    <th>State</th>
                                    <th>Created At</th>
                                </tr>
                            </thead>
                            <tbody id="conn-table-body">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Connections
                    </div>
                    <div class="card-body">
                        <button type="button" class="btn btn-primary" id="list-conn">List Connections</button>
                        <table class="table" id="conn-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>State</th>
                                    <th>Created At</th>
                                    <th>Updated At</th>
                                </tr>
                                <tr>
                                    <td>1</td>
                                    <td>State</td>
                                    <td>Created At</td>
                                    <td>Updated At</td>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        Issued Credentials
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script>
        const idFilterInput = document.getElementById("idFilter");
        const tableRows = document.querySelectorAll("table tbody tr");
        idFilterInput.addEventListener("keyup", () => {
            const filterValue = idFilterInput.value.toLowerCase();
            tableRows.forEach((row) => {
                const idCell = row.querySelector("td:first-child");
                const idText = idCell.textContent.toLowerCase();
                if (idText.indexOf(filterValue) > -1) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script>
        function renderConnections(connections) {
            const tableContent = connections.map(conn => {
                const createdDate = new Date(conn.created_at);
                return `
                <tr>
                    <td>${conn.connection_id}</td>
                    <td>${conn.their_did}</td>
                    <td>${conn.state}</td>
                    <td>${createdDate.toLocaleDateString()} ${createdDate.toLocaleTimeString()}</td>
                </tr>`;
            });
            $("#conn-table-body").html(tableContent);
        }
        // initial render
        renderConnections(<%- JSON.stringify(connections) %>);
    </script>
    <script>
        function fetchConnections() {
            $.get("/issuer/connections", (data, status) => {
                renderConnections(data);
            });
        }
        $("#create-inv").click(() => {
            $.post("/issuer/create-invitation", {}, (data, status) => {
                fetchConnections();
            });
        });

        $("#list-conn").click(() => {
            $.get("/issuer/connections", (data, status) => {
                let tableContent = '<tr><th>ID</th><th>State</th><th>Created At</th><th>Updated At</th></tr>';
                const rows = data.results.map(conn => {
                    const createdDate = new Date(conn.created_at);
                    const updatedDate = new Date(conn.updated_at);
                    return `
                    <tr>
                        <td>${conn.connection_id}</td>
                        <td>${conn.state}</td>
                        <td>${createdDate.toLocaleDateString()} ${createdDate.toLocaleTimeString()}</td>
                        <td>${updatedDate.toLocaleDateString()} ${updatedDate.toLocaleTimeString()}</td>
                    </tr>`;
                });
                tableContent += rows;
                $("#conn-table").html(tableContent);
            });
        });
    </script>
</body>
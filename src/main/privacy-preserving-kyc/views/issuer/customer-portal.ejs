<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Issuer Site - Customer Portal</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        .bd-callout {
            padding: 0.75rem;
            border: 1px solid #e9ecef;
            border-left-width: 0.25rem;
            border-radius: 0.25rem;
            border-left-color: green;
        }

        #copy-btn span {
            position: absolute;
            transform: translate(-50%, -50%);
        }

        .fade {
            transition: opacity 1s ease-in-out;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand mx-3" href="#">Issuer Site - Customer Portal</a>
        </div>
    </nav>

    <div class="container my-4" style="max-width: 80%">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Customer Information
                    </div>
                    <div class="card-body">
                        <div class="container p-0">
                            <div class="row">
                                <div class="col">
                                    <p><b>Username:</b>
                                        <%= customer.username %>
                                    </p>
                                    <p><b>Full Name:</b>
                                        <%= customer.name %>
                                    </p>
                                    <p><b>Passport No.:</b>
                                        <%= customer.passport_no %>
                                    </p>
                                </div>
                                <div class="col">
                                    <p><b>Date of Birth:</b>
                                        <%= customer.birth_date %>
                                    </p>
                                    <p><b>Nationality:</b>
                                        <%= customer.nationality %>
                                    </p>
                                    <p><b>Register Time:</b>
                                        <%= new Date(customer.register_time).toLocaleDateString() + " " + new
                                            Date(customer.register_time).toLocaleTimeString() %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        Connections
                    </div>
                    <div class="card-body">
                        <div style="display: flex; align-items: center; height:45px">
                            <button type="button" id="new-btn" class="btn btn-primary me-3"
                                style="height: 40px; width: 150px">New Connection</button>
                            <button type="button" id="copy-btn" hidden class="btn btn-success me-3"
                                style="height: 40px; width: 150px">
                                <span id="copy-inv-txt" style="opacity: 1;">Copy Invitation</span>
                                <span id="copied-txt" style="opacity: 0;">Copied!</span>
                            </button>
                            <span id="inv-url" hidden class="bd-callout"
                                style="display:inline-block; width: 70%; height:50px; overflow: auto; white-space: nowrap;"></span>
                        </div>
                        <hr>
                        <form class="mb-3">
                            <label for="idFilter" class="form-label">Filter by ID:</label>
                            <input type="text" class="form-control" id="idFilter" placeholder="Enter ID">
                        </form>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Holder DID</th>
                                    <th>State</th>
                                    <th>Created At</th>
                                </tr>
                            </thead>
                            <tbody id="conn-table-body">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Request Credentials
                    </div>
                    <div class="card-body container">
                        <form class="row">
                            <div class="col-4">
                                <select id="cred-type" class="form-select">
                                    <option value="" disabled selected>Credential Type</option>
                                    <option value="eligibility">Eligibility</option>
                                    <option value="kyc">KYC</option>
                                </select>
                            </div>
                            <div class="col-5">
                                <input id="conn-id" class="form-control" type="text" placeholder="Connection ID">
                            </div>
                            <div class="col">
                                <button type="button" id="request-btn" class="btn btn-outline-primary"
                                    style="height: 40px; width: 100px">Request</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        Requested Credentials
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Request Time</th>
                                    <th>Type</th>
                                    <th>Holder DID</th>
                                    <th>Content</th>
                                </tr>
                            </thead>
                            <tbody id="cred-table-body">
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <script>
        const idFilterInput = document.getElementById("idFilter");
        idFilterInput.addEventListener("keyup", () => {
            const filterValue = idFilterInput.value.toLowerCase();
            const tableRows = document.querySelectorAll("#conn-table-body tr");
            tableRows.forEach((row) => {
                const idCell = row.querySelector("td:first-child");
                const idText = idCell.textContent.toLowerCase();
                if (idText.indexOf(filterValue) > -1) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <script>
        function renderConnections(connections) {
            const tableContent = connections.map(conn => {
                const createdDate = new Date(conn.created_at);
                return `
                <tr>
                    <td>${conn.connection_id}</td>
                    <td>${conn.their_did}</td>
                    <td>${conn.state}</td>
                    <td>${createdDate.toLocaleDateString()} ${createdDate.toLocaleTimeString()}</td>
                </tr>`;
            });
            $("#conn-table-body").html(tableContent);
        }
        // initial render
        renderConnections(<%- JSON.stringify(connections) %>);
    </script>
    <script>
        function renderCredentials(credentials) {
            const tableContent = credentials.map(cred => {
                const createdDate = new Date(cred.created_at);
                return `
                <tr>
                    <td>${createdDate.toLocaleDateString()} ${createdDate.toLocaleTimeString()}</td>
                    <td>${cred.type}</td>
                    <td>${cred.holder_did}</td>
                    <td><button class="btn-outline-secondary" onclick="alert(\`${JSON.stringify(JSON.parse(cred.content).credentialSubject).replaceAll("\"", "'")}\`)">View Content</button></td>
                </tr>`;
            });
            $("#cred-table-body").html(tableContent);
        }
        // initial loading
        $.get("/issuer/credentials", (data, status) => {
            renderCredentials(data);
        });
    </script>
    <script>
        function fetchConnections() {
            $.get("/issuer/connections", (data, status) => {
                renderConnections(data);
            });
        }
        $("#new-btn").click(() => {
            $.post("/issuer/create-invitation", {}, (data, status) => {
                fetchConnections();
                $("#inv-url").text(data.invitation_url);
                $("#new-btn").attr("hidden", true);
                $("#copy-btn").attr("hidden", false);
                $("#copy-btn").focus();
                $("#inv-url").attr("hidden", false);
            });
        });
        $("#copy-btn").click(() => {
            const copyText = document.getElementById("inv-url").textContent;
            navigator.clipboard.writeText(copyText);
            $("#copy-inv-txt").css("opacity", 0);
            $("#copied-txt").css("opacity", 1);
            setTimeout(() => {
                $("#copy-inv-txt").addClass("fade");
                $("#copied-txt").addClass("fade");
                $("#copy-inv-txt").css("opacity", "1");
                $("#copied-txt").css("opacity", "0");
                setTimeout(() => {
                    $("#copy-inv-txt").removeClass("fade");
                    $("#copied-txt").removeClass("fade");
                }, 1000);
            }, 500);
            
        });

        $("#request-btn").click(() => {
            const typeVal = $("#cred-type").val();
            const connId = $("#conn-id").val();
            if (!typeVal || !connId) {
                alert("Please enter a credential type and connection ID");
                return;
            }
            $.post("/issuer/request-credential",
            {
                type: typeVal,
                connection_id: connId
            },
            (data, status) => {
                console.log(data);
            });
        });
    </script>

</body>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Issuer Site - Custome Portal</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand mx-3" href="#">Issuer Site - Customer Portal</a>
        </div>
    </nav>

    <div class="container my-4" style="max-width: 80%">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Customer Information
                    </div>
                    <div class="card-body">
                        <p>Username: <%= customer.username %></p>
                        <p>Full Name: <%= customer.name %></p>
                        <p>Passport No.: <%= customer.passport_no %></p>
                        <p>Date of Birth: <%= customer.birth_date %></p>
                        <p>Nationality: <%= customer.nationality %></p>
                        <p>Register Time: <%= new Date(customer.register_time).toLocaleDateString() + " " + new Date(customer.register_time).toLocaleTimeString() %></p>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        Customer Database
                    </div>
                    <div class="card-body">
                        <form class="mb-3">
                            <label for="idFilter" class="form-label">Filter by ID:</label>
                            <input type="text" class="form-control" id="idFilter" placeholder="Enter ID">
                        </form>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Deposit Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>John Smith</td>
                                    <td>456 Maple St, Anytown USA</td>
                                    <td>$1000</td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Jane Doe</td>
                                    <td>789 Oak St, Anytown USA</td>
                                    <td>$500</td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>Bob Johnson</td>
                                    <td>321 Elm St, Anytown USA</td>
                                    <td>$750</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Connections
                    </div>
                    <div class="card-body">
                        <button type="button" class="btn btn-primary" id="list-conn">List Connections</button>
                        <table class="table" id="conn-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>State</th>
                                    <th>Created At</th>
                                    <th>Updated At</th>
                                </tr>
                                <tr>
                                    <td>1</td>
                                    <td>State</td>
                                    <td>Created At</td>
                                    <td>Updated At</td>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        Issued Credentials
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script>
        const idFilterInput = document.getElementById("idFilter");
        const tableRows = document.querySelectorAll("table tbody tr");
        idFilterInput.addEventListener("keyup", () => {
            const filterValue = idFilterInput.value.toLowerCase();
            tableRows.forEach((row) => {
                const idCell = row.querySelector("td:first-child");
                const idText = idCell.textContent.toLowerCase();
                if (idText.indexOf(filterValue) > -1) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script>
        $("#create-inv").click(() => {
            $.post("/issuer/create-invitation", {}, (data, status) => {
                new QRCode(document.getElementById("inv-qr"), data.invitation_url);
            });
        });

        $("#list-conn").click(() => {
            $.get("/issuer/connections", (data, status) => {
                let tableContent = '<tr><th>ID</th><th>State</th><th>Created At</th><th>Updated At</th></tr>';
                const rows = data.results.map(conn => {
                    const createdDate = new Date(conn.created_at);
                    const updatedDate = new Date(conn.updated_at);
                    return `
                    <tr>
                        <td>${conn.connection_id}</td>
                        <td>${conn.state}</td>
                        <td>${createdDate.toLocaleDateString()} ${createdDate.toLocaleTimeString()}</td>
                        <td>${updatedDate.toLocaleDateString()} ${updatedDate.toLocaleTimeString()}</td>
                    </tr>`;
                });
                tableContent += rows;
                $("#conn-table").html(tableContent);
            });
        });
    </script>
</body>

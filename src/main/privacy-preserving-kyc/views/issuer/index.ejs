<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Issuer Site - Login</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand mx-3" href="#">Issuer Site - Login</a>
        </div>
    </nav>

    <div class="container my-4" style="max-width: 80%">
        <div class="row">

            <div class="col-md-6 border-end border-3">
                <form id="register-form" class="form-signin" action="/issuer/signup" method="post">
                    <h1 class="h3 mb-3 fw-normal">Register Customer Info</h1>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="reg-username" name="username"
                            placeholder="Username">
                        <label for="reg-username">Username</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="reg-username" name="name" placeholder="Full Name">
                        <label for="reg-username">Full Name</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="reg-password" name="password"
                            placeholder="Password">
                        <label for="reg-password">Password</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="reg-nationality" name="nationality"
                            placeholder="Nationality">
                        <label for="reg-nationality">Nationality</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="reg-passport-no" name="passport_no"
                            placeholder="Passport No.">
                        <label for="reg-passport-no">Passport No.</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="reg-birth-date" name="birth_date"
                            placeholder="Date of Birth">
                        <label for="reg-nationality">Date of Birth</label>
                    </div>
                    <button id="register-btn" class="mt-3 w-100 btn btn-lg btn-primary" type="submit">Register</button>
                </form>
            </div>

            <div class="col-md-6">
                <form class="form-signin" action="/issuer/login" method="post">
                    <h1 class="h3 mb-3 fw-normal">Customer Login</h1>

                    <div class="form-floating">
                        <input type="text" class="form-control" id="customerUsername" name="username"
                            placeholder="Username">
                        <label for="customerUsername">Username</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="customerPassword" name="password"
                            placeholder="Password">
                        <label for="customerPassword">Password</label>
                    </div>
                    <button class="mt-3 w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                </form>
            </div>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script>
        $("#register-form").submit(function (e) {
            console.log("asdf");
            e.preventDefault();
            var form = $(this);
            var url = form.attr('action');
            $.ajax({
                type: "POST",
                url: url,
                data: form.serialize(),
                success: function (data) {
                    alert(JSON.stringify(data));
                }
            });
        });
    </script>
</body>

</html>
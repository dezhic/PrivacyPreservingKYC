<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Issuer Site - Admin Portal</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand mx-3" href="#">Issuer Site - Admin Portal</a>
        </div>
    </nav>

    <div class="container my-4" style="max-width: 80%">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Issuer Information
                    </div>
                    <div class="card-body">
                        <p><b>Issuer DID: </b><%= issuerDid %></p>
                        <p><b>Public Key (Base64): </b><%= btoa(issuerKeys.pub) %></p>
                        <p><b>Private Key: </b><%= issuerKeys.priv %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Customer DID Database
                    </div>
                    <div class="card-body">
                        <form class="mb-1">
                            <label for="idFilter" class="form-label">Filter by DID:</label>
                            <input type="text" class="form-control" id="idFilter" placeholder="Enter DID">
                        </form>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>DID</th>
                                    <th>Name</th>
                                    <th>Nationality</th>
                                    <th>Passport No.</th>
                                    <th>Date of Birth</th>
                                </tr>
                            </thead>
                            <tbody id="customer-table-body">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script>
        const idFilterInput = document.getElementById("idFilter");
        idFilterInput.addEventListener("keyup", () => {
            const tableRows = document.querySelectorAll("table tbody tr");
            const filterValue = idFilterInput.value.toLowerCase();
            tableRows.forEach((row) => {
                const idCell = row.querySelector("td:first-child");
                const idText = idCell.textContent.toLowerCase();
                if (idText.indexOf(filterValue) > -1) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });
    </script>
    <script>
        function renderCustomerTableBody(data) {
            const rows = data.map(d => {
                return `
                <tr>
                    <td>${d.did}</td>
                    <td>${d.name}</td>
                    <td>${d.nationality}</td>
                    <td>${d.passport_no}</td>
                    <td>${d.birth_date}</td>
                </tr>`;
            });
            $("#customer-table-body").html(rows.join(""));
        }
        function refreshCustomerTableBody() {
            $.ajax({
                url: "/issuer/customers",
                type: "GET",
                success: function (data) {
                    renderCustomerTableBody(data);
                },
                error: function (err) {
                    alert(err);
                }
            });
        }
        refreshCustomerTableBody();
    </script>
</body>

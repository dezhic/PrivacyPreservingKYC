<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verifier 001</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand mx-3" href="#">Verifier 001</a>
        </div>
    </nav>

    <div class="container my-4" style="max-width: 80%">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Parse zkKYC Token
                    </div>
                    <div class="card-body">
                        <form>
                            <textarea type="text" class="form-control mb-3"
                                id="zkkyc-token" placeholder="Input the zkKYC proof here..."
                                style="height:500px;" wrap="off"></textarea>
                            <div class="row" style="display: flex; align-items: center; height:45px">
                                <div class="col-4" style="display:flex; justify-content: center;">
                                    <button type="button" id="paste-btn" class="btn btn-success me-3"
                                        style="height: 40px; width: 160px">Paste Token</button>
                                </div>
                                <div class="col-4" style="display:flex; justify-content: center;">
                                    <button type="button" id="verify-btn" class="btn btn-primary me-3"
                                        style="height: 40px; width: 160px">Verify</button>
                                </div>
                                <div class="col-4" style="display:flex; justify-content: center;">
                                    <button type="button" id="parse-token-btn" class="btn btn-secondary me-3"
                                        style="height: 40px; width: 160px">Parse Token</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Verify zkKYC Token
                    </div>
                    <div class="card-body">
                    <div><label for="parsed">Parsed zkKYC Token:</label></div>
                    <textarea id="parsed" wrap="off" readonly class="form-control mb-3" style="width: 100%; height: 450px" placeholder="Token and proof parsing result will be displayed here."></textarea>
                    <div class="row" style="display: flex; align-items: center; height:45px">
                        <div class="col" style="display:flex; justify-content: center;">
                            <button id="copy-btn" type="button" id="receive-btn" class="btn btn-success me-3"
                                style="height: 40px; width: 160px">Copy</button>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const idFilterInput = document.getElementById("idFilter");
        idFilterInput.addEventListener("keyup", () => {
            const filterValue = idFilterInput.value.toLowerCase();
            const tableRows = document.querySelectorAll("#conn-table-body tr");
            tableRows.forEach((row) => {
                const idCell = row.querySelector("td:first-child");
                const idText = idCell.textContent.toLowerCase();
                if (idText.indexOf(filterValue) > -1) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script>
        function renderConnections(connections) {
            const tableContent = connections.map(conn => {
                const createdDate = new Date(conn.created_at);
                return `
                <tr>
                    <td>${conn.connection_id}</td>
                    <td>${conn.their_public_did}</td>
                    <td>${conn.my_did}</td>
                    <td>${createdDate.toLocaleDateString()} ${createdDate.toLocaleTimeString()}</td>
                </tr>`;
            });
            $("#conn-table-body").html(tableContent);
        }
        // initial render
    </script>
    <script>
        $("#paste-btn").click(() => {
            const clipboardText = navigator.clipboard.readText();
            clipboardText.then((text) => {
                $("#zkkyc-token").val(text).change();
                $("#zkkyc-token").focus();
            });

        });

        $("#verify-btn").click(() => {
            $.ajax({
                url: "/verifier/verify-token",
                type: "POST",
                data: JSON.stringify({ token: JSON.parse($("#zkkyc-token").val()) }),
                contentType: "application/json",
                success: (data, status) => {
                    alert(data);
                },
            })
        });

        $("#parse-token-btn").click(() => {
            $.ajax({
                url: "/verifier/parse-token",
                type: "POST",
                data: JSON.stringify({ token: JSON.parse($("#zkkyc-token").val()) }),
                contentType: "application/json",
                success: (data, status) => {
                    console.log("/holder/parse-token response: ", data);
                    $("#parsed").val(JSON.stringify(data, null, 2));
                },
            })
        });

    </script>
    <script>
        $("#copy-btn").click(() => {
            const clipboardText = navigator.clipboard.writeText($("#parsed").val());
            clipboardText.then(() => {
                $("#parsed").focus();
            });
        });
    </script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Holder's Wallet</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        .bd-callout {
            padding: 0.75rem;
            border: 1px solid #e9ecef;
            border-left-width: 0.25rem;
            border-radius: 0.25rem;
            border-left-color: green;
        }

        #copy-btn span {
            position: absolute;
            transform: translate(-50%, -50%);
        }

        .fade {
            transition: opacity 1s ease-in-out;
        }

        #conn-table-body td:nth-child(2),
        #conn-table-body td:nth-child(3) {
            word-break: break-all;
            word-wrap: break-word;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand mx-3" href="#">Holder's Wallet</a>
        </div>
    </nav>

    <div class="container my-4" style="max-width: 80%">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Customer Information
                    </div>
                    <div class="card-body">
                        <div class="container p-0">
                            <div class="row">
                                <div class="col">
                                    <p><b>Username:</b>
                                        <%= // customer.username %>
                                    </p>
                                    <p><b>Full Name:</b>
                                        <%= // customer.name %>
                                    </p>
                                    <p><b>Passport No.:</b>
                                        <%= // customer.passport_no %>
                                    </p>
                                </div>
                                <div class="col">
                                    <p><b>Date of Birth:</b>
                                        <%= // customer.birth_date %>
                                    </p>
                                    <p><b>Nationality:</b>
                                        <%= // customer.nationality %>
                                    </p>
                                    <p><b>Register Time:</b>
                                        <%= // new Date(customer.register_time).toLocaleDateString() + " " + new
                                            // Date(customer.register_time).toLocaleTimeString()
                                        %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        Connections
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row" style="display: flex; align-items: center;">
                                <div class="col-8">
                                    <input type="text" class="form-control" id="inv-url" placeholder="Invitation URL"/>
                                </div>
                                <div class="col-auto" style="display: flex; align-items: center; height:45px">
                                    <button type="button" id="paste-btn" class="btn btn-success me-3"
                                        style="height: 40px; width: 160px">Paste Invitation</button>
                                    <button type="button" id="receive-btn" hidden class="btn btn-primary me-3"
                                        style="height: 40px; width: 160px">Receive Invitation</button>
                                </div>
                            </div>
                        </form>
                        <hr>
                        <form class="mb-3">
                            <label for="idFilter" class="form-label">Filter by ID:</label>
                            <input type="text" class="form-control" id="idFilter" placeholder="Enter ID">
                        </form>
                        <table class="table" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Their Public DID</th>
                                    <th>My DID</th>
                                    <th>Created At</th>
                                </tr>
                            </thead>
                            <tbody id="conn-table-body">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        Connections
                    </div>
                    <div class="card-body">
                        <button type="button" class="btn btn-primary" id="list-conn">List Connections</button>
                        <table class="table" id="conn-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>State</th>
                                    <th>Created At</th>
                                    <th>Updated At</th>
                                </tr>
                                <tr>
                                    <td>1</td>
                                    <td>State</td>
                                    <td>Created At</td>
                                    <td>Updated At</td>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        Received Credentials
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Request Time</th>
                                    <th>Type</th>
                                    <th>Holder DID</th>
                                    <th>Option</th>
                                </tr>
                            </thead>
                            <tbody id="cred-table-body">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const idFilterInput = document.getElementById("idFilter");
        idFilterInput.addEventListener("keyup", () => {
            const filterValue = idFilterInput.value.toLowerCase();
            const tableRows = document.querySelectorAll("#conn-table-body tr");
            tableRows.forEach((row) => {
                const idCell = row.querySelector("td:first-child");
                const idText = idCell.textContent.toLowerCase();
                if (idText.indexOf(filterValue) > -1) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script>
        function renderConnections(connections) {
            const tableContent = connections.map(conn => {
                const createdDate = new Date(conn.created_at);
                return `
                <tr>
                    <td>${conn.connection_id}</td>
                    <td>${conn.their_public_did}</td>
                    <td>${conn.my_did}</td>
                    <td>${createdDate.toLocaleDateString()} ${createdDate.toLocaleTimeString()}</td>
                </tr>`;
            });
            $("#conn-table-body").html(tableContent);
        }
        // initial render
        renderConnections(<%- JSON.stringify(connections) %>);
    </script>
    <script>
        $("#inv-url").on("input change", () => {
            // if empty, display paste-btn, otherwise, display receive-btn
            if ($("#inv-url").val() == "") {
                $("#paste-btn").attr("hidden", false);
                $("#receive-btn").attr("hidden", true);
            } else {
                $("#paste-btn").attr("hidden", true);
                $("#receive-btn").attr("hidden", false);
            }
        });
    </script>
    <script>
        function fetchConnections() {
            $.get("/holder/connections", (data, status) => {
                renderConnections(data);
            });
        }
        $("#paste-btn").click(() => {
            const clipboardText = navigator.clipboard.readText();
            clipboardText.then((text) => {
                $("#inv-url").val(text).change();
                $("#inv-url").focus();
            });
            
        });
        $("#receive-btn").click(() => {
            $.post("/holder/receive-invitation",
            {
                invitation_url: $("#inv-url").val()
            },
            (data, status) => {
                fetchConnections();
                $("#inv-url").text(data.invitation_url);
                $("#new-btn").attr("hidden", true);
                $("#copy-btn").attr("hidden", false);
                $("#copy-btn").focus();
                $("#inv-url").attr("hidden", false);
            });
        });

        $("#list-conn").click(() => {
            $.get("/holder/connections", (data, status) => {
                let tableContent = '<tr><th>ID</th><th>State</th><th>Created At</th><th>Updated At</th></tr>';
                const rows = data.results.map(conn => {
                    const createdDate = new Date(conn.created_at);
                    const updatedDate = new Date(conn.updated_at);
                    return `
                    <tr>
                        <td>${conn.connection_id}</td>
                        <td>${conn.state}</td>
                        <td>${createdDate.toLocaleDateString()} ${createdDate.toLocaleTimeString()}</td>
                        <td>${updatedDate.toLocaleDateString()} ${updatedDate.toLocaleTimeString()}</td>
                    </tr>`;
                });
                tableContent += rows;
                $("#conn-table").html(tableContent);
            });
        });
    </script>
    <script>
        function renderCredentials(credentials) {
            const tableContent = credentials.map(cred => {
                const createdDate = new Date(cred.issuanceDate);
                return `
                <tr>
                    <td>${createdDate.toLocaleDateString()} ${createdDate.toLocaleTimeString()}</td>
                    <td>${cred.type.includes("DidSig") ? "kyc" : (cred.type.includes("Person") ? "eligibility" : "unknown")}</td>
                    <td>${cred.credentialSubject.id}</td>
                    <td><button class="btn-outline-secondary" onclick="alert(\`${JSON.stringify(cred.credentialSubject).replaceAll("\"", "'")}\`)">View Content</button></td>
                </tr>`;
            });
            $("#cred-table-body").html(tableContent);
        }
        // initial loading
        $.get("/holder/credentials", (data, status) => {
            renderCredentials(data);
        });
    </script>
</body>